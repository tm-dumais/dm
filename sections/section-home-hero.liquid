{{ 'section-home-hero.css' | asset_url | stylesheet_tag }}

<div class="home-hero" style="background-color: #F2F2F2;">
  <div class="home-hero__media-container">
    {%- if section.settings.video_url != blank -%}
      <video class="home-hero__video" autoplay loop muted playsinline>
        <source src="{{ section.settings.video_url }}" type="video/mp4">
      </video>
    {%- elsif section.settings.image != blank -%}
      {{ section.settings.image | image_url: width: 3000 | image_tag:
        loading: 'lazy',
        class: "home-hero__image",
        sizes: "100vw",
        widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000'
      }}
    {%- endif -%}
  </div>

  <div class="home-hero__content-container">
    <div class="home-hero__content">
      {%- for block in section.blocks -%}
        {% case block.type %}
          {%- when 'heading' -%}
            <h2 class="home-hero__heading {{ block.settings.heading_size }}" {{ block.shopify_attributes }}>
              {{ block.settings.heading }}
            </h2>
          {%- when 'text' -%}
            <div class="home-hero__text rte" {{ block.shopify_attributes }}>{{ block.settings.text }}</div>
          {%- when 'cta' -%}
            {%- if block.settings.cta_text != blank -%}
              <a href="{{ block.settings.cta_link }}" class="home-hero__cta">
                {{ block.settings.cta_text }}
              </a>
            {%- endif -%}
        {%- endcase -%}
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Home Hero",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "url",
      "id": "video_url",
      "label": "Background Video URL",
      "info": "Provide a direct link to an MP4 video file"
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "Heading",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "heading",
          "label": "Heading",
          "default": "<p>Welcome to our store</p>"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "H2"
            },
            {
              "value": "h1",
              "label": "H1"
            },
            {
              "value": "h0",
              "label": "H0"
            }
          ],
          "default": "h1",
          "label": "Heading size"
        }
      ]
    },
    {
      "type": "text",
      "name": "Text",
      "limit": 1,
      "settings": [
        {
          "type": "richtext",
          "id": "text",
          "label": "Text",
          "default": "<p>Add additional information here.</p>"
        }
      ]
    },
    {
      "type": "cta",
      "name": "Call to Action",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "cta_text",
          "label": "CTA Text",
          "default": "Discover 31 days"
        },
        {
          "type": "url",
          "id": "cta_link",
          "label": "CTA Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Home Hero",
      "category": "Hero",
      "blocks": [
        {
          "type": "heading"
        },
        {
          "type": "text"
        },
        {
          "type": "cta"
        }
      ]
    }
  ]
}
{% endschema %}