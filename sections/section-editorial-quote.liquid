{{ 'section-editorial-quote.css' | asset_url | stylesheet_tag }}

<div class="editorial-quote background-{{ section.settings.background_color }}">
  <div class="content-wrapper">
    <div class="quote-container">
      <h2 class="quote {{ section.settings.heading_size }}">{{ section.settings.quote }}</h2>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Editorial Quote",
  "settings": [
    {
      "type": "richtext",
      "id": "quote",
      "label": "Quote"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "T2"
        },
        {
          "value": "h1",
          "label": "T1"
        },
        {
          "value": "h0",
          "label": "T0"
        }
      ],
      "default": "h1",
      "label": "Quote size"
    },
    {
      "type": "select",
      "id": "background_color",
      "options": [
        {
          "value": "none",
          "label": "No background"
        },
        {
          "value": "color-1",
          "label": "Color 1"
        },
        {
          "value": "color-2",
          "label": "Color 2"
        },
        {
          "value": "color-3",
          "label": "Color 3"
        }
      ],
      "default": "none",
      "label": "Background color"
    }
  ]
}
{% endschema %}