{{ 'section-bespoke.css' | asset_url | stylesheet_tag }}

<div class="stof-container section-bespoke-3">
  <div class="stof-content">
    <div class="stof-item stof-item--full" {{ block.shopify_attributes }}>
      <div class="stof-card">
        {%- if section.settings.image != blank -%}
          {{ section.settings.image | image_url: width: 1420 | image_tag: loading: 'lazy', class: 'stof-card__image' }}
        {%- endif -%}
        {%- if section.settings.caption_headline != blank -%}
          <h3 class="caption-headline">{{ section.settings.caption_headline | escape }}</h3>
        {%- endif -%}
        {%- if section.settings.text != blank -%}
          <div class="rte new-caledonia">{{ section.settings.text }}</div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Bespoke 3",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "caption_headline",
      "label": "Caption Headline"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text"
    }
  ],
  "presets": [
    {
      "name": "Bespoke 3"
    }
  ]
}
{% endschema %}

{%- style -%}
  .section-bespoke-3 .stof-container {
    width: 60vw;
    max-width: 950px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .section-bespoke-3 .stof-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 80px;
  }

  .section-bespoke-3 .stof-item--full {
    grid-template-columns: 1fr;
    justify-items: center;
  }

  .section-bespoke-3 .stof-card {
    display: flex;
    flex-direction: column;
    width: 50%;
  }

  .section-bespoke-3 .stof-card__image {
    width: 100%;
    height: auto;
  }

  .section-bespoke-3 .stof-arrow {
    position: relative;
    left: 15%; /* Move arrow 15% to the right */
  }

  @media screen and (max-width: 749px) {
    .section-bespoke-3 .stof-container {
      width: 100%;
      padding: 0 15px;
    }

    .section-bespoke-3 .stof-card {
      width: 100%;
    }

    .section-bespoke-3 .stof-arrow {
      left: 0; /* Reset arrow position for mobile */
    }
  }
{%- endstyle -%}