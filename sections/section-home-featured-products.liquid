{% schema %}
{
  "name": "Home Featured Products",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Featured Products"
    },
    {
      "type": "product",
      "id": "product_1",
      "label": "Featured Product 1"
    },
    {
      "type": "product",
      "id": "product_2",
      "label": "Featured Product 2"
    }
  ],
  "presets": [
    {
      "name": "Featured Products"
    }
  ]
}
{% endschema %}

<div class="page-width">
  {% if section.settings.title != blank %}
    <h2 class="section__title">{{ section.settings.title }}</h2>
  {% endif %}
  <div class="split-section">
    {% for i in (1..2) %}
      {%- assign product_key = 'product_' | append: i -%}
      {%- assign product = section.settings[product_key] -%}
      {% if product != blank %}
        <div class="split-section__half">
          <div class="product-card">
            <a href="{{ product.url }}" class="product-card__link">
              <div class="product-card__image-wrapper">
                {% if product.featured_image != blank %}
                  <img src="{{ product.featured_image | img_url: '600x' }}" alt="{{ product.featured_image.alt | escape }}" class="product-card__image" loading="lazy">
                {% else %}
                  {{ 'product-1' | placeholder_svg_tag: 'product-card__image placeholder-svg' }}
                {% endif %}
              </div>
              <div class="product-card__info">
                <h3 class="product-card__title">{{ product.title }}</h3>
                <p class="product-card__price">{{ product.price | money }}</p>
              </div>
            </a>
          </div>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

