{% schema %}
{
  "name": "Home Featured Products",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Featured Products"
    },
    {
      "type": "product",
      "id": "product_1",
      "label": "Featured Product 1"
    },
    {
      "type": "product",
      "id": "product_2",
      "label": "Featured Product 2"
    }
  ],
  "presets": [
    {
      "name": "Featured Products"
    }
  ]
}
{% endschema %}

<div class="page-width">
  {% if section.settings.title != blank %}
    <h2 class="section__title">{{ section.settings.title }}</h2>
  {% endif %}
  <div class="featured-products-grid">
    {% for i in (1..2) %}
      {%- assign product_key = 'product_' | append: i -%}
      {%- assign product = section.settings[product_key] -%}
      {% if product != blank %}
        <div class="featured-product-card">
          <a href="{{ product.url }}" class="product-card-link">
            <div class="product-card-image">
              {% if product.featured_image != blank %}
                <img src="{{ product.featured_image | img_url: '400x' }}" alt="{{ product.featured_image.alt | escape }}" loading="lazy">
              {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg' }}
              {% endif %}
            </div>
            <div class="product-card-info">
              <h3 class="product-card-title">{{ product.title }}</h3>
              <p class="product-card-price">{{ product.price | money }}</p>
            </div>
          </a>
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

{{ 'section-home-featured-products.css' | asset_url | stylesheet_tag }}