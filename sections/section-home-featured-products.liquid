{% schema %}
{
  "name": "Home Featured Products",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Featured Products"
    },
    {
      "type": "product",
      "id": "product_1",
      "label": "Featured Product 1"
    },
    {
      "type": "product",
      "id": "product_2",
      "label": "Featured Product 2"
    }
  ],
  "presets": [
    {
      "name": "Featured Products"
    }
  ]
}
{% endschema %}

<div class="page-width">
  {% if section.settings.title != blank %}
    <h2 class="section__title">{{ section.settings.title }}</h2>
  {% endif %}
  <div class="featured-products-grid">
    {% for i in (1..2) %}
      {%- assign product_key = 'product_' | append: i -%}
      {%- assign product = section.settings[product_key] -%}
      {% if product != blank %}
        <div class="featured-product-card">
          {% render 'product-card', product: product %}
        </div>
      {% endif %}
    {% endfor %}
  </div>
</div>

