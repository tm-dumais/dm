{% schema %}
{
  "name": "Home Featured Products",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "product",
      "id": "product_1",
      "label": "Featured Product 1"
    },
    {
      "type": "product",
      "id": "product_2",
      "label": "Featured Product 2"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Featured Products"
    }
  ],
  "presets": [
    {
      "name": "Featured Products"
    }
  ]
}
{% endschema %}

<div class="page-width">
  {% if section.settings.title != blank %}
    <h2 class="section-title">{{ section.settings.title }}</h2>
  {% endif %}
  <ul class="grid product-grid grid--2-col-desktop grid--1-col-tablet-down">
    {% for i in (1..2) %}
      {%- assign product_key = 'product_' | append: i -%}
      {%- assign product = section.settings[product_key] -%}
      {% if product != blank %}
        <li class="grid__item">
          {% render 'product-card-grid',
            product_card_product: product,
            media_size: "square",
            show_secondary_image: true,
            add_image_padding: false,
            show_vendor: true
          %}
        </li>
      {% endif %}
    {% endfor %}
  </ul>
</div>

