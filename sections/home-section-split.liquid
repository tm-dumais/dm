{{ 'section-home-split.css' | asset_url | stylesheet_tag }}

<div class="home-section-split color-{{ section.settings.color_scheme }} gradient">
  <div class="home-section-split__grid">
    <div class="home-section-split__media-item{% if section.settings.image_position == 'right' %} home-section-split__media-item--right{% endif %}">
      <div class="home-section-split__media media"
        {% if section.settings.image != blank %}
          style="padding-bottom: {{ 1 | divided_by: section.settings.image.aspect_ratio | times: 100 }}%;"
        {% endif %}
      >
        {%- if section.settings.image != blank -%}
          {%- assign image_height = section.settings.image.width | divided_by: section.settings.image.aspect_ratio -%}
          {{ section.settings.image | image_url: width: 1500 | image_tag:
            loading: 'lazy',
            width: section.settings.image.width,
            height: image_height,
            sizes: "100vw",
            widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
            class: "home-section-split__media-image"
          }}
        {%- else -%}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {%- endif -%}
      </div>
    </div>
    <div class="home-section-split__text-item home-section-split__text-item--{{ section.settings.content_vertical_alignment }} home-section-split__text-item--{{ section.settings.content_horizontal_alignment }}">
      <div class="home-section-split__content content-container">
        {%- if section.settings.eyebrow_text != blank -%}
          <p class="home-section-split__eyebrow">{{ section.settings.eyebrow_text | upcase }}</p>
        {%- endif -%}
        {%- if section.settings.heading != blank -%}
          <h2 class="home-section-split__heading {{ section.settings.heading_size }} rte" style="font-style: italic;">
            {{ section.settings.heading }}
          </h2>
        {%- endif -%}
        {%- if section.settings.button_label != blank -%}
          <div class="home-section-split__button-wrapper">
            <a{% if section.settings.button_link == blank %} role="link" aria-disabled="true"{% else %} href="{{ section.settings.button_link }}"{% endif %} class="button button--secondary">
              {{ section.settings.button_label | escape | upcase }}
            </a>
          </div>
        {%- endif -%}
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Home Split Section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left",
      "label": "Image position"
    },
    {
      "type": "select",
      "id": "content_vertical_alignment",
      "options": [
        {
          "value": "top",
          "label": "Top"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "top",
      "label": "Vertical content alignment"
    },
    {
      "type": "select",
      "id": "content_horizontal_alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        }
      ],
      "default": "left",
      "label": "Horizontal content alignment"
    },
    {
      "type": "text",
      "id": "eyebrow_text",
      "label": "Eyebrow text"
    },
    {
      "type": "richtext",
      "id": "heading",
      "default": "<p>Split section heading</p>",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "T2"
        },
        {
          "value": "h1",
          "label": "T1"
        },
        {
          "value": "h0",
          "label": "T0"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "text",
      "id": "button_label",
      "default": "Button label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    },
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "background-1",
          "label": "Background 1"
        },
        {
          "value": "background-2",
          "label": "Background 2"
        },
        {
          "value": "inverse",
          "label": "Inverse"
        }
      ],
      "default": "background-1",
      "label": "Color scheme"
    }
  ],
  "presets": [
    {
      "name": "Home Split Section",
      "category": "Image"
    }
  ]
}
{% endschema %}
