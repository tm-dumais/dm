{{ 'section-editorial-image-with-text.css' | asset_url | stylesheet_tag }}

<div class="editorial-image-with-text background-{{ section.settings.background_color }}">
  <div class="content-wrapper">
    <div class="image-text-container {% if section.settings.image_position == 'right' %}image-second{% endif %}">
      <div class="image-container">
        <img src="{{ section.settings.image | img_url: 'master' }}" alt="{{ section.settings.image.alt }}">
      </div>
      <div class="text-container">
        <h2 class="heading {{ section.settings.heading_size }}">{{ section.settings.heading }}</h2>
      </div>
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Editorial Image with Text",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "T2"
        },
        {
          "value": "h1",
          "label": "T1"
        },
        {
          "value": "h0",
          "label": "T0"
        }
      ],
      "default": "h1",
      "label": "Heading size"
    },
    {
      "type": "select",
      "id": "image_position",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left",
      "label": "Image position"
    },
    {
      "type": "select",
      "id": "background_color",
      "options": [
        {
          "value": "none",
          "label": "No background"
        },
        {
          "value": "color-1",
          "label": "Color 1"
        },
        {
          "value": "color-2",
          "label": "Color 2"
        },
        {
          "value": "color-3",
          "label": "Color 3"
        }
      ],
      "default": "none",
      "label": "Background color"
    }
  ],
  "presets": [
    {
      "name": "Editorial Image with Text",
      "category": "Editorial"
    }
  ]
}
{% endschema %}