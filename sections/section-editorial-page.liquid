<div class="template-editorial-sections">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'editorial_headline' %}
        {% render 'section-editorial-headline', block: block %}
      {% when 'editorial_single_image' %}
        {% render 'section-editorial-single-image', block: block %}
      {% when 'editorial_double_image' %}
        {% render 'section-editorial-double-image', block: block %}
      {% when 'editorial_quote' %}
        {% render 'section-editorial-quote', block: block %}
      {% when 'editorial_image_text' %}
        {% render 'section-editorial-image-text', block: block %}
    {% endcase %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "Editorial Sections",
  "blocks": [
    {
      "type": "editorial_headline",
      "name": "Editorial Headline",
      "settings": [
        {
          "type": "text",
          "id": "headline",
          "label": "Headline",
          "default": "Your headline here"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "Small"
            },
            {
              "value": "h1",
              "label": "Medium"
            },
            {
              "value": "h0",
              "label": "Large"
            }
          ],
          "default": "h1",
          "label": "Heading size"
        },
        {
          "type": "select",
          "id": "background_color",
          "options": [
            {
              "value": "none",
              "label": "No background"
            },
            {
              "value": "color-1",
              "label": "Color 1"
            },
            {
              "value": "color-2",
              "label": "Color 2"
            },
            {
              "value": "color-3",
              "label": "Color 3"
            }
          ],
          "default": "none",
          "label": "Background color"
        }
      ]
    },
    {
      "type": "editorial_single_image",
      "name": "Editorial Single Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption"
        },
        {
          "type": "text",
          "id": "image_alt",
          "label": "Image alt text (optional)"
        }
      ]
    },
    {
      "type": "editorial_double_image",
      "name": "Editorial Double Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image_1",
          "label": "Image 1"
        },
        {
          "type": "text",
          "id": "caption_1",
          "label": "Caption 1"
        },
        {
          "type": "image_picker",
          "id": "image_2",
          "label": "Image 2"
        },
        {
          "type": "text",
          "id": "caption_2",
          "label": "Caption 2"
        },
        {
          "type": "text",
          "id": "image_1_alt",
          "label": "Image 1 alt text (optional)"
        },
        {
          "type": "text",
          "id": "image_2_alt",
          "label": "Image 2 alt text (optional)"
        }
      ]
    },
    {
      "type": "editorial_quote",
      "name": "Editorial Quote",
      "settings": [
        {
          "type": "richtext",
          "id": "quote",
          "label": "Quote",
          "default": "<p>Your quote here</p>"
        },
        {
          "type": "select",
          "id": "quote_size",
          "options": [
            {
              "value": "h2",
              "label": "Small"
            },
            {
              "value": "h1",
              "label": "Medium"
            },
            {
              "value": "h0",
              "label": "Large"
            }
          ],
          "default": "h1",
          "label": "Quote size"
        },
        {
          "type": "select",
          "id": "background_color",
          "options": [
            {
              "value": "none",
              "label": "No background"
            },
            {
              "value": "color-1",
              "label": "Color 1"
            },
            {
              "value": "color-2",
              "label": "Color 2"
            },
            {
              "value": "color-3",
              "label": "Color 3"
            }
          ],
          "default": "none",
          "label": "Background color"
        }
      ]
    },
    {
      "type": "editorial_image_text",
      "name": "Editorial Image and Text",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "Small"
            },
            {
              "value": "h1",
              "label": "Medium"
            },
            {
              "value": "h0",
              "label": "Large"
            }
          ],
          "default": "h1",
          "label": "Heading size"
        },
        {
          "type": "select",
          "id": "image_position",
          "options": [
            {
              "value": "left",
              "label": "Left"
            },
            {
              "value": "right",
              "label": "Right"
            }
          ],
          "default": "left",
          "label": "Image position"
        },
        {
          "type": "select",
          "id": "background_color",
          "options": [
            {
              "value": "none",
              "label": "No background"
            },
            {
              "value": "color-1",
              "label": "Color 1"
            },
            {
              "value": "color-2",
              "label": "Color 2"
            },
            {
              "value": "color-3",
              "label": "Color 3"
            }
          ],
          "default": "none",
          "label": "Background color"
        },
        {
          "type": "text",
          "id": "image_alt",
          "label": "Image alt text (optional)"
        }
      ]
    }
  ]
}
{% endschema %}