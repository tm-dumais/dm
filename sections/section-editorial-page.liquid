{{ 'editorial-template.css' | asset_url | stylesheet_tag }}

<div class="template-editorial">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'editorial_headline' %}
        {% render 'section-editorial-headline', block: block, page_handle: page.handle %}
      {% when 'editorial_single_image' %}
        {% render 'section-editorial-single-image', block: block, page_handle: page.handle %}
      {% when 'editorial_double_image' %}
        {% render 'section-editorial-double-image', block: block, page_handle: page.handle %}
      {% when 'editorial_quote' %}
        {% render 'section-editorial-quote', block: block, page_handle: page.handle %}
      {% when 'editorial_image_text' %}
        {% render 'section-editorial-image-text', block: block, page_handle: page.handle %}
    {% endcase %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "Editorial Page",
  "blocks": [
    {
      "type": "editorial_headline",
      "name": "Editorial Headline",
      "limit": 1,
      "settings": [
        {
          "type": "text",
          "id": "headline",
          "label": "Headline",
          "default": "Your headline here"
        },
        {
          "type": "select",
          "id": "heading_size",
          "options": [
            {
              "value": "h2",
              "label": "Small"
            },
            {
              "value": "h1",
              "label": "Medium"
            },
            {
              "value": "h0",
              "label": "Large"
            }
          ],
          "default": "h1",
          "label": "Heading size"
        }
      ]
    },
    // ... (include other block types here)
  ],
  "presets": [
    {
      "name": "Editorial Page"
    }
  ]
}
{% endschema %}