{{ 'editorial-template.css' | asset_url | stylesheet_tag }}

<div class="template-editorial">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'editorial_headline' %}
        {% render 'section-editorial-headline', section: block %}
      {% when 'editorial_single_image' %}
        {% render 'section-editorial-single-image', section: block %}
      {% when 'editorial_double_image' %}
        {% render 'section-editorial-double-image', section: block %}
      {% when 'editorial_quote' %}
        {% render 'section-editorial-quote', section: block %}
      {% when 'editorial_image_text' %}
        {% render 'section-editorial-image-text', section: block %}
    {% endcase %}
  {% endfor %}
</div>

{% schema %}
{
  "name": "Editorial Page",
  "blocks": [
    {
      "type": "editorial_headline",
      "name": "Editorial Headline",
      "limit": 1,
