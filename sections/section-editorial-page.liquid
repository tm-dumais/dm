<div class="template-editorial-sections">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'editorial_headline' %}
        {{ 'section-editorial-headline.css' | asset_url | stylesheet_tag }}
        <div class="editorial-section section-editorial-headline background-{{ block.settings.background_color }}">
          <div class="editorial-section__inner section-editorial-headline__content">
            {% if block.settings.headline != blank %}
              <h2 class="section-editorial-headline__text {{ block.settings.heading_size }}">
                {{ block.settings.headline }}
              </h2>
            {% endif %}
          </div>
        </div>

      {% when 'editorial_single_image' %}
        {{ 'section-editorial-single-image.css' | asset_url | stylesheet_tag }}
        <div class="section-editorial-single-image">
          <div class="section-editorial-single-image__content content-container">
            {% if block.settings.image != blank %}
              <div class="section-editorial-single-image__image-container {% if block.settings.image.aspect_ratio > 1 %}landscape{% else %}portrait{% endif %}">
                {{ block.settings.image | image_url: width: 1500 | image_tag:
                  loading: 'lazy',
                  class: "section-editorial-single-image__image",
                  sizes: "100vw",
                  widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
                  alt: block.settings.image.alt | default: block.settings.caption | default: 'Editorial image'
                }}
              </div>
            {% endif %}
            {% if block.settings.caption != blank %}
              <p class="section-editorial-single-image__caption">{{ block.settings.caption | upcase }}</p>
            {% endif %}
          </div>
        </div>

      {% when 'editorial_double_image' %}
        {{ 'section-editorial-double-image.css' | asset_url | stylesheet_tag }}
        <div class="section-editorial-double-image">
          <div class="section-editorial-double-image__content content-container">
            <div class="section-editorial-double-image__grid">
              <div class="section-editorial-double-image__item">
                {% if block.settings.image_1 != blank %}
                  {{ block.settings.image_1 | image_url: width: 750 | image_tag:
                    loading: 'lazy',
                    class: "section-editorial-double-image__image",
                    sizes: "(min-width: 750px) 50vw, 100vw",
                    widths: '375, 550, 750, 1100, 1500',
                    alt: block.settings.image_1.alt | default: block.settings.caption_1 | default: 'Editorial image 1'
                  }}
                {% endif %}
                {% if block.settings.caption_1 != blank %}
                  <p class="section-editorial-double-image__caption">{{ block.settings.caption_1 | upcase }}</p>
                {% endif %}
              </div>
              <div class="section-editorial-double-image__item">
                {% if block.settings.image_2 != blank %}
                  {{ block.settings.image_2 | image_url: width: 750 | image_tag:
                    loading: 'lazy',
                    class: "section-editorial-double-image__image",
                    sizes: "(min-width: 750px) 50vw, 100vw",
                    widths: '375, 550, 750, 1100, 1500',
                    alt: block.settings.image_2.alt | default: block.settings.caption_2 | default: 'Editorial image 2'
                  }}
                {% endif %}
                {% if block.settings.caption_2 != blank %}
                  <p class="section-editorial-double-image__caption">{{ block.settings.caption_2 | upcase }}</p>
                {% endif %}
              </div>
            </div>
          </div>
        </div>

      {% when 'editorial_quote' %}
        {{ 'section-editorial-quote.css' | asset_url | stylesheet_tag }}
        <div class="section-editorial-quote background-{{ block.settings.background_color }}" style="height: 100vh;">
          <div class="section-editorial-quote__content content-container">
            {% if block.settings.quote != blank %}
              <blockquote class="section-editorial-quote__text {{ block.settings.quote_size }}" style="font-style: italic;">
                {{ block.settings.quote }}
              </blockquote>
            {% endif %}
          </div>
        </div>

      {% when 'editorial_image_text' %}
        {{ 'section-editorial-image-text.css' | asset_url | stylesheet_tag }}
        <div class="section-editorial-image-text background-{{ block.settings.background_color }}">
          <div class="section-editorial-image-text__grid{% if block.settings.image_position == 'right' %} section-editorial-image-text__grid--reverse{% endif %}">
            <div class="section-editorial-image-text__image-container">
              {% if block.settings.image != blank %}
                {{ block.settings.image | image_url: width: 750 | image_tag:
                  loading: 'lazy',
                  class: "section-editorial-image-text__image",
                  sizes: "(min-width: 750px) 50vw, 100vw",
                  widths: '375, 550, 750, 1100, 1500',
                  alt: block.settings.image.alt | default: block.settings.heading | default: 'Editorial image'
                }}
              {% endif %}
            </div>
            <div class="section-editorial-image-text__text-container">
              {% if block.settings.heading != blank %}
                <h2 class="section-editorial-image-text__heading {{ block.settings.heading_size }}">
                  {{ block.settings.heading }}
                </h2>
              {% endif %}
            </div>
          </div>
        </div>
    {% endcase %}
  {% endfor %}
</div>

