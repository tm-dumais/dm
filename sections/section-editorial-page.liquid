      ]
    },
    {
      "type": "editorial_single_image",
      "name": "Editorial Single Image",
      "settings": [
        // Copy settings from section-editorial-single-image.liquid
      ]
    },
    {
      "type": "editorial_double_image",
      "name": "Editorial Double Image",
      "settings": [
        // Copy settings from section-editorial-double-image.liquid
      ]
    },
    {
      "type": "editorial_quote",
      "name": "Editorial Quote",
      "settings": [
        // Copy settings from section-editorial-quote.liquid
      ]
    },
    {
      "type": "editorial_image_text",
      "name": "Editorial Image and Text",
      "settings": [
        // Copy settings from section-editorial-image-text.liquid
      ]
    }
  ],
  "presets": [
    {
      "name": "Editorial Page",
      "blocks": [
        {
          "type": "editorial_headline"
        }
      ]
    }
  ]
}
{% endschema %}