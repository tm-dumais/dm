{{ 'section-bespoke.css' | asset_url | stylesheet_tag }}
{{ 'component-rte.css' | asset_url | stylesheet_tag }}

<link rel="stylesheet" href="{{ 'component-slider.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'component-slider.css' | asset_url | stylesheet_tag }}</noscript>

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
      padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
    }
  }

  .stof-container {
    width: 60vw;
    max-width: 950px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .stof-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 80px; /* Adjust this value to increase/decrease space between rows */
  }

  .stof-item {
    display: grid;
  }

  .stof-item--full {
    grid-template-columns: 1fr;
    justify-items: center;
  }

  .stof-item--full .stof-card {
    width: 50%;
  }

  .stof-item--half {
    grid-template-columns: 1fr 1fr;
    gap: 40px; /* This adds space between the two columns */
  }

  .stof-card {
    display: flex;
    flex-direction: column;
  }

  .stof-card__image {
    width: 100%;
    height: auto;
  }

  .caption-headline {
    font-family: 'Pitch', sans-serif;
    font-size: 16px;
    text-transform: uppercase;
    margin-top: 10px;
    margin-bottom: 5px;
  }

  .rte.new-caledonia {
    font-family: 'New Caledonia', serif;
    line-height: 1.15;
    margin: 0;
  }

  .stof-arrow {
    width: 50px;
    height: 90px;
    background-image: url('{{ "arrow-down.png" | asset_url }}');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    justify-self: center;
  }

  @media screen and (max-width: 749px) {
    .stof-container {
      width: 100%;
      padding: 0 15px;
    }

    .stof-content {
      gap: 60px; /* Reduced gap for mobile */
    }

    .stof-item--full .stof-card,
    .stof-item--half {
      grid-template-columns: 1fr;
    }

    .stof-item--full .stof-card {
      width: 100%;
    }
  }
{%- endstyle -%}

{%- liquid
  assign columns_mobile_int = section.settings.columns_mobile | plus: 0
  assign show_mobile_slider = false
  if section.settings.swipe_on_mobile and section.blocks.size > columns_mobile_int
    assign show_mobile_slider = true
  endif
-%}

<div class="stof color-{{ section.settings.color_scheme }} gradient{% unless section.settings.background_style == 'none' and settings.text_boxes_border_thickness > 0 or settings.text_boxes_shadow_opacity > 0 %} background-{{ section.settings.background_style }}{% endunless %}{% if section.settings.title == blank %} no-heading{% endif %}">
  <div class="page-width section-{{ section.id }}-padding isolate">
    <div class="stof-container">
      <div class="stof-headline">
        {%- unless section.settings.title == blank -%}
          <h2 class="title {{ section.settings.heading_size }} custom-headline">
            {{ section.settings.title | escape }}
          </h2>
        {%- endunless -%}
      </div>

      <div class="stof-content">
        {%- for block in section.blocks -%}
          <div class="stof-item {% if forloop.index == 1 or forloop.last %}stof-item--full{% else %}stof-item--half{% endif %}" {{ block.shopify_attributes }}>
            <div class="stof-card">
              {%- if block.settings.image != blank -%}
                {{
                  block.settings.image
                  | image_url: width: 1420
                  | image_tag:
                    loading: 'lazy',
                    class: 'stof-card__image'
                }}
              {%- endif -%}
              {%- if block.settings.caption_headline != blank -%}
                <h3 class="caption-headline">{{ block.settings.caption_headline | escape }}</h3>
              {%- endif -%}
              {%- if block.settings.text != blank -%}
                <div class="rte new-caledonia">{{ block.settings.text }}</div>
              {%- endif -%}
            </div>
            {% if forloop.index == 1 or forloop.index == 3 %}
              <div class="stof-card">
                {%- if block.settings.image != blank -%}
                  {{
                    block.settings.image
                    | image_url: width: 1420
                    | image_tag:
                      loading: 'lazy',
                      class: 'stof-card__image'
                  }}
                {%- endif -%}
                {%- if block.settings.caption_headline != blank -%}
                  <h3 class="caption-headline">{{ block.settings.caption_headline | escape }}</h3>
                {%- endif -%}
                {%- if block.settings.text != blank -%}
                  <div class="rte new-caledonia">{{ block.settings.text }}</div>
                {%- endif -%}
              </div>
            {% endif %}
          </div>
          {%- if forloop.index == 1 or forloop.index == 3 -%}
            <div class="stof-arrow"></div>
          {%- endif -%}
        {%- endfor -%}
      </div>
    </div>
  </div>
</div>

