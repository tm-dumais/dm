{{ 'section-bespoke.css' | asset_url | stylesheet_tag }}

<div class="bespoke color-{{ section.settings.color_scheme }} gradient">
  <div class="page-width section-{{ section.id }}-padding">
    <div class="bespoke-grid">
      {%- for block in section.blocks -%}
        <div class="bespoke-item{% if forloop.index == 1 or forloop.index == 4 %} bespoke-item--centered{% endif %}" {{ block.shopify_attributes }}>
          {%- if block.settings.image != blank -%}
            <div class="bespoke-item__image-wrapper">
              {{
                block.settings.image
                | image_url: width: 800
                | image_tag:
                  loading: 'lazy',
                  class: 'bespoke-item__image',
                  widths: '400, 600, 800',
                  sizes: '(min-width: 750px) 50vw, 100vw'
              }}
            </div>
          {%- endif -%}
          <div class="bespoke-item__content">
            {%- if block.settings.headline != blank -%}
              <h3 class="bespoke-item__headline">{{ block.settings.headline | escape }}</h3>
            {%- endif -%}
            {%- if block.settings.text != blank -%}
              <div class="bespoke-item__text">{{ block.settings.text }}</div>
            {%- endif -%}
          </div>
        </div>
      {%- endfor -%}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Bespoke",
  "class": "section",
  "tag": "section",
  "settings": [
    {
      "type": "select",
      "id": "color_scheme",
      "options": [
        {
          "value": "accent-1",
          "label": "Accent 1"
        },
        {
          "value": "accent-2",
          "label": "Accent 2"
        },
        {
          "value": "background-1",
          "label": "Background 1"
        },
        {
          "value": "background-2",
          "label": "Background 2"
        },
        {
          "value": "inverse",
          "label": "Inverse"
        }
      ],
      "default": "background-1",
      "label": "Color scheme"
    }
  ],
  "blocks": [
    {
      "type": "bespoke_item",
      "name": "Bespoke Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "headline",
          "default": "Headline",
          "label": "Headline"
        },
        {
          "type": "richtext",
          "id": "text",
          "default": "<p>Add your content here.</p>",
          "label": "Text"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Bespoke",
      "blocks": [
        {
          "type": "bespoke_item"
        },
        {
          "type": "bespoke_item"
        },
        {
          "type": "bespoke_item"
        },
        {
          "type": "bespoke_item"
        }
      ]
    }
  ]
}
{% endschema %}