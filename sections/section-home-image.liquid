{{ 'component-image-with-text.css' | asset_url | stylesheet_tag }}
{{ 'component-rte.css' | asset_url | stylesheet_tag }}
{{ 'section-home-split.css' | asset_url | stylesheet_tag }}

<div class="home-section-image background-{{ section.settings.background_color }}
            {% if section.settings.padding_top_enabled %}home-section-image--padding-top{% endif %}
            {% if section.settings.padding_bottom_enabled %}home-section-image--padding-bottom{% endif %}
            {% if section.settings.padding_horizontal_enabled %}home-section-image--padding-horizontal{% endif %}">
  <div class="home-section-image__container">
    <div class="home-section-image__media">
      {%- if section.settings.image != blank -%}
        {{ section.settings.image | image_url: width: 1500 | image_tag:
          loading: 'lazy',
          width: "100%",
          height: "auto",
          sizes: "100vw",
          widths: '375, 550, 750, 1100, 1500, 1780, 2000, 3000, 3840',
          class: "home-section-image__media-image"
        }}
      {%- else -%}
        {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
      {%- endif -%}
    </div>
    {%- if section.settings.caption != blank -%}
      <p class="home-section-image__caption">{{ section.settings.caption }}</p>
    {%- endif -%}
  </div>
</div>

{% schema %}
{
  "name": "Home Image Section",
  "class": "section",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "caption",
      "label": "Caption"
    },
    {
      "type": "select",
      "id": "background_color",
      "options": [
        {
          "value": "none",
          "label": "No background"
        },
        {
          "value": "color-1",
          "label": "Color 1"
        },
        {
          "value": "color-2",
          "label": "Color 2"
        },
        {
          "value": "color-3",
          "label": "Color 3"
        }
      ],
      "default": "none",
      "label": "Background color"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "checkbox",
      "id": "padding_top_enabled",
      "label": "Enable top padding",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "padding_bottom_enabled",
      "label": "Enable bottom padding",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "padding_horizontal_enabled",
      "label": "Enable horizontal padding",
      "default": false
    }
  ],
  "presets": [
    {
      "name": "Home Image Section",
      "category": "Image"
    }
  ]
}
{% endschema %}