{% schema %}
{
  "name": "Custom Image with Text One",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Your Heading Here"
    },
    {
      "type": "richtext",
      "id": "text",
      "label": "Text content",
      "default": "<p>Your content here</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label",
      "default": "Learn More"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ],
  "presets": [
    {
      "name": "Custom Image with Text One",
      "category": "Custom"
    }
  ]
}
{% endschema %}

<section class="custom-image-text">
  <div class="container">
    <div class="image-text-wrapper">
      <div class="image-container">
        {% if section.settings.image %}
          {{ section.settings.image | image_url: width: 600 | image_tag: loading: 'lazy', class: 'custom-image' }}
        {% else %}
          {{ 'image' | placeholder_svg_tag: 'placeholder-svg' }}
        {% endif %}
      </div>
      <div class="text-container">
        <h2>{{ section.settings.heading }}</h2>
        {{ section.settings.text }}
        {% if section.settings.button_label != blank and section.settings.button_link != blank %}
          <a href="{{ section.settings.button_link }}" class="button">
            {{ section.settings.button_label }}
          </a>
        {% endif %}
      </div>
    </div>
  </div>
</section>

<style>
  .custom-image-text {
    padding: 40px 0;
  }
  .image-text-wrapper {
    display: flex;
    align-items: center;
    gap: 40px;
  }
  .image-container, .text-container {
    flex: 1;
  }
  .custom-image, .placeholder-svg {
    width: 100%;
    height: auto;
  }
  @media (max-width: 768px) {
    .image-text-wrapper {
      flex-direction: column;
    }
  }
</style>