{{ 'section-bespoke.css' | asset_url | stylesheet_tag }}

<div class="stof-container section-bespoke-2">
  <div class="stof-content">
    <div class="stof-item stof-item--half">
      <div class="stof-card">
        {%- if section.settings.image_1 != blank -%}
          {{ section.settings.image_1 | image_url: width: 1420 | image_tag: loading: 'lazy', class: 'stof-card__image' }}
        {%- endif -%}
        {%- if section.settings.caption_headline_1 != blank -%}
          <h3 class="caption-headline">{{ section.settings.caption_headline_1 | escape }}</h3>
        {%- endif -%}
        {%- if section.settings.text_1 != blank -%}
          <div class="rte new-caledonia">{{ section.settings.text_1 }}</div>
        {%- endif -%}
      </div>
      <div class="stof-card second-column">
        {%- if section.settings.image_2 != blank -%}
          {{ section.settings.image_2 | image_url: width: 1420 | image_tag: loading: 'lazy', class: 'stof-card__image' }}
        {%- endif -%}
        {%- if section.settings.caption_headline_2 != blank -%}
          <h3 class="caption-headline">{{ section.settings.caption_headline_2 | escape }}</h3>
        {%- endif -%}
        {%- if section.settings.text_2 != blank -%}
          <div class="rte new-caledonia">{{ section.settings.text_2 }}</div>
        {%- endif -%}
      </div>
    </div>
  </div>
  <div class="stof-arrow"></div>
</div>

{% schema %}
{
  "name": "Bespoke 2",
  "settings": [
    {
      "type": "image_picker",
      "id": "image_1",
      "label": "Image 1"
    },
    {
      "type": "text",
      "id": "caption_headline_1",
      "label": "Caption Headline 1"
    },
    {
      "type": "richtext",
      "id": "text_1",
      "label": "Text 1"
    },
    {
      "type": "image_picker",
      "id": "image_2",
      "label": "Image 2"
    },
    {
      "type": "text",
      "id": "caption_headline_2",
      "label": "Caption Headline 2"
    },
    {
      "type": "richtext",
      "id": "text_2",
      "label": "Text 2"
    }
  ],
  "presets": [
    {
      "name": "Bespoke 2"
    }
  ]
}
{% endschema %}

{%- style -%}
  .section-bespoke-2 .stof-container {
    width: 60vw;
    max-width: 950px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .section-bespoke-2 .stof-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 80px;
  }

  .section-bespoke-2 .stof-item--half {
    grid-template-columns: 1fr 1fr;
    gap: 6rem; /* Added gap between columns */
  }

  .section-bespoke-2 .stof-card {
    display: flex;
    flex-direction: column;
  }

  .section-bespoke-2 .stof-card__image {
    width: 100%;
    height: auto;
  }

  .section-bespoke-2 .stof-arrow {
    position: relative;
    left: 15%; /* Move arrow 15% to the right */
  }

  @media screen and (max-width: 749px) {
    .section-bespoke-2 .stof-container {
      width: 100%;
      padding: 0 15px;
    }

    .section-bespoke-2 .stof-item--half {
      grid-template-columns: 1fr;
    }

    .section-bespoke-2 .stof-arrow {
      left: 0; /* Reset arrow position for mobile */
    }
  }

  @media screen and (min-width: 750px) {
    .section-bespoke-2 .stof-item--half .second-column {
      margin-top: 9rem; /* Updated margin-top for second column */
    }
  }
{%- endstyle -%}